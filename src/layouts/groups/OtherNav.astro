---
import { currentLocale } from "astro-nanostores-i18n:runtime";
import LanguageSwitcher from "../../components/LanguageSwitcher.astro";
import { C, localeSlugs } from "../../site.config";

type Props = {
  translations?: Record<string, string>;
};

const { translations } = Astro.props;
const locale = currentLocale.get();
---

<nav id="other-nav">
  <ul>
    <li>
      <a href={`tel:${C.SETTINGS.META.PHONE.replaceAll(" ", "")}`}>
        {C.SETTINGS.META.PHONE}
      </a>
    </li>
    <li>
      <a href={`mailto:${C.SETTINGS.META.EMAIL}`}>
        {C.SETTINGS.META.EMAIL}
      </a>
    </li>
    <li>
      <LanguageSwitcher locales={localeSlugs} currentLocale={locale} translations={translations} />
    </li>
  </ul>
</nav>
