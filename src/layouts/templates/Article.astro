---
type Props = {
  title?: string;
};

const { title } = Astro.props;
---

<article>
  <header>
    <slot name="title">
      <h1>{title}</h1>
    </slot>
  </header>
  <slot />
</article>

<style>
  article {
    margin: 0 auto;
    max-width: 800px;
  }
  header :global(h1) {
    margin: 0;
  }
</style>
